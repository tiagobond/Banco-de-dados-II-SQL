SELECT Carros.modelo_carro, Carros.ano_fabricacao, Carros.preco, Fabricantes.nome_fabricante
FROM Carros
JOIN Fabricantes ON Carros.fabricante_id = Fabricantes.id_fabricante;

SELECT * FROM Fabricantes, Carros;
